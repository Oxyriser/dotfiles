## NVIM
alias e "nvim"
alias v "nvim -R"

## EXA
alias ls "exa"
alias l "exa -l"
alias la "exa -la"
alias t "exa --tree"

## GIT
alias g "git"
alias gd "git diff"
alias gu "git pull"
alias gst "git status"
alias gck "git checkout"
alias ga "git add"
alias gaa "git add --all"
alias gc "git commit"
alias gca "git commit --all"
alias gp "git push"
alias gt "git log --oneline --decorate --all --graph"

## DU
alias du "du -h"
alias ddu "du -sh"

## RM
alias rrm "rm -Rf"

## CP
alias cp "cp -v"
alias ccp "cp -R"

## MV
alias mv "mv -v"

## PYTHON
alias python "python3"
alias py "python3"
alias ipy "ipython3"
alias pip "pip3"

## CHMOD
alias cx "chmod +x"

## DOCKER
alias d "docker"

## BAT
alias cat "bat --style=numbers,changes"

## CD
alias ... "cd ../.."
