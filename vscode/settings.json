{
  "window.titleBarStyle": "custom", // Otherwise the titlebar color is dictated by the OS
  "window.zoomLevel": 0,

  "editor.fontFamily": "'JetBrains Mono', mononoki, 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.fontSize": 18,
  "editor.tabSize": 2,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,
  "editor.detectIndentation": false,
  "editor.lightbulb.enabled": false,
  "editor.suggestSelection": "first",
  "editor.renderLineHighlight": "none",

  "terminal.integrated.fontSize": 16,

  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 0, // Show opened files

  "problems.showCurrentInStatus": true,

  "workbench.colorTheme": "Night Owl+",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.folders.color": "#fdd835",
  "workbench.activityBar.visible": false, // Left bar
  "workbench.statusBar.visible": true, // Bottom bar
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false, // Disable the preview on single click
  "breadcrumbs.enabled": false, // Breadcrumb above editor

  "files.autoSave": "off",
  "files.exclude": { // Files hidden in the UI explorer
    // Python
    "**/__pycache__/": true,
    "**/*.pyc": true,
    "**/.mypy_cache/": true,

    // Jetbrains
    "**/.idea/": true,

    // Elm
    "**/elm-stuff/": true,

    // Haskell
    "**/.stack-work": true
  },
  "files.associations": {
    ".eslintrc": "jsonc",
    "*.prisma": "graphql"
  },

  "html.mirrorCursorOnMatchingTag": false,

  "zenMode.hideLineNumbers": false,
  "zenMode.hideTabs": false,

  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.mypyEnabled": false,
  "python.jediEnabled": false,
  "python.formatting.provider": "black",

  "[haskell]": {
    "editor.defaultFormatter": "ilyakooo0.ormolu"
  },
  "ghcSimple.maxCompletions": 4,

  "go.useLanguageServer": false,
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "-Egolint",
    "-Einterfacer",
    "-Elll",
    "-Eunconvert",
    "-Eunparam",
    "--fast"
  ],
  "go.formatTool": "goimports",
  "go.autocompleteUnimportedPackages": true,

  "java.configuration.checkProjectSettingsExclusions": false,

  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.intelliSenseMode": "clang-x64",

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "eslint.run": "onSave",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "git.autofetch": true,
  "git.autofetchPeriod": 120,
  "git.autoStash": true,
  "gitblame.infoMessageFormat": "${commit.summary} (${commit.hash_short,7})",

  "vim.leader": "<space>",
  "vim.visualstar": true,
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/Cellar/neovim/0.4.3/bin/nvim",
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.smartcase": true,
  "vim.surround": true,
  "vim.camelCaseMotion.enable": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "&"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "<leader>",
        "i"
      ],
      "after": [
        "i",
        " ",
        "<Esc>",
        "r"
      ]
    },
    {
      "before": [
        "<leader>",
        "a"
      ],
      "after": [
        "a",
        " ",
        "<Esc>",
        "r"
      ]
    },
    {
      "before": [
        "<C-h>"
      ],
      "commands": [
        "workbench.action.previousEditor"
      ]
    },
    {
      "before": [
        "<C-l>"
      ],
      "commands": [
        "workbench.action.nextEditor"
      ]
    },
    {
      "before": [
        "<C-j>"
      ],
      "after": [
        "}"
      ]
    },
    {
      "before": [
        "<C-k>"
      ],
      "after": [
        "{"
      ]
    },
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    },
    {
      "before": [
        "q",
        "q"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<C-f>"
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    },
    {
      "before": [
        "<leader>",
        "z"
      ],
      "commands": [
        "workbench.action.toggleZenMode"
      ]
    },
    {
      "before": [
        "<leader>",
        "r"
      ],
      "commands": [
        "workbench.action.splitEditorRight"
      ]
    },
    {
      "before": [
        "<leader>",
        "b"
      ],
      "commands": [
        "workbench.action.splitEditorDown"
      ]
    },
    {
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    },
    {
      "before": [
        "<C-f>"
      ],
      "commands": [
        "editor.action.formatSelection"
      ]
    },
    // Don't overwrite the clipboard with what is being overwritten
    {
      "before": [
        "p"
      ],
      "after": [
        "p",
        "g",
        "v",
        "y"
      ]
    }
  ],
}